<div class="fullPage" >
	<div class="header" >
		<%= link_to image_tag('/assets/bookLogo.jpg'), librarians_path , :class=>'logo' %>

		<center>
			<h1 > LIBRARY MANAGEMENT SYSTEM</h1>
			<p> A platform to search your favorite book </p>
		</center>
		<div class="tab">
			<div class="contents">
				Welcome, <%= current_user.name %> <font color="black">(<%= current_user.role.upcase %>)</font>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;


				<%= link_to 'LogOut', destroy_user_session_path, method: :delete %>
				&nbsp;&nbsp;&nbsp;&nbsp;
			</div>

		</div>

	</div>

	<div class="librarianContainer" >

		<% if current_user.role=="request_manager" %>
			<a href="<%= request_admins_path %>" >
				<div class="librarianThumbnail" style="background: url('/assets/Requests.jpg'); background-repeat: no-repeat; background-position: center; background-size: auto;">
					<p>Requests</p>
				</div>
			</a>
		<% end %>
		<% if current_user.role=="book_manager" %>
			<a href="<%= new_book_path %>">
				<div class="librarianThumbnail" style="background: url('/assets/AddBook.jpg'); background-repeat: no-repeat; background-position: center; background-size: auto;" >
					<p>Add Book</p>
				</div>
			</a>

			<a href="<%= books_librarians_path %>" >
				<div class="librarianThumbnail" style="background: url('/assets/SeeBooks.jpg'); background-repeat: no-repeat; background-position: center; background-size: auto;">
					<p>See Books</p>
				</div>
			</a>
		<% end %>

		<a href="<%= user_admins_path %>">
			<div class="librarianThumbnail" style="background: url('/assets/Users.jpg'); background-repeat: no-repeat; background-position: center; background-size: auto;">
				<p>See All users</p>
			</div>
		</a>

		
	</div>


	<br><br><br><br><br><br><br><br><br>

</div>
