<div class="fullPage" >
	<div class="header" >
		<%= link_to image_tag('/assets/bookLogo.jpg'), '/librarians/index' , :class=>'logo' %>

		<center>
			<h1 > LIBRARY MANAGEMENT SYSTEM</h1>
			<p> A platform to search your favorite book </p>
		</center>
		<div class="tab">
			<div class="contents">
				Welcome, <%= current_admin.name %> <font color="black">(<%= current_admin.role.upcase %>)</font>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;


				<%= link_to 'LogOut', destroy_user_session_path, method: :delete %>
				&nbsp;&nbsp;&nbsp;&nbsp;
			</div>

		</div>

	</div>


	<div class="librarianContainer" >
		<center>
			<div class="librarianIndexBox">
				<table >
					<tr>
						<th>S.No.</th>
						<th>Name</th>
					</tr>
					<% i=1 %> 
					<% @books.each do |book| %>
						<tr>
							<td> <%= i %><% i=i+1 %></td>
							<td> <%= link_to book.title, librarian_book_path(book) %> </td>
						</tr>
					<% end %>

				</table>
			</div>
		</center>
	</div>



	<br><br><br><br><br><br><br><br><br>

	
	<div class="footer">
		Visit Soon
	</div>
</div>