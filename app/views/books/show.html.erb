<div class="fullPage" >
	<div class="header" >
		<%= link_to image_tag('/assets/bookLogo.jpg'), '/books' , :class=>'logo' %>

		<center>
			<h1 > LIBRARY MANAGEMENT SYSTEM</h1>
			<p> A platform to search your favorite book </p>
		</center>
		<div class="tab">
			<div class="contents">
				Welcome, <%= current_user.name %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

				<%= link_to 'Requests', pendingRequests_path %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

				<%= link_to 'Lended Books', lendedBooks_path %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;


				<%= link_to 'LogOut', destroy_user_session_path, method: :delete %>
				&nbsp;&nbsp;&nbsp;&nbsp;
			</div>

			<%= form_tag(searched_path, method: :get) do %>
				<%= text_field_tag(:search, params[:search] ,:placeholder=>"Search By Name") %>
				<%= submit_tag ("Search") %>
			<% end %>
		</div>

	</div>


	<div class="container" >
		<center>
			<div class="showBlock" >
					<img src="<%=@book.image %>" >
			</div>
			<div class="showDetails">
				<h2>Book Details</h2>
				<table class="bookDetails">
					<tr>
						<td class="TableTag">Title</td>
						<td> : </td>
						<td> <%= @book.title %> </td>
					</tr>
					<tr>
						<td class="TableTag">Author</td>
						<td> : </td>
						<td> <%= @book.author %> </td>
					</tr>
					<tr>
						<td class="TableTag">Publisher </td>
						<td> : </td>
						<td> <%= @book.publisher %> </td>
					</tr>
					<tr>
						<td class="TableTag">Language</td>
						<td> : </td>
						<td> <%= @book.language %> </td>
					</tr>
					<tr>
						<td class="TableTag">Description</td>
						<td> : </td>
						<td> <%= @book.description %> </td>
					</tr>
					<tr>
						<td class="TableTag">Available Quantity</td>
						<td> : </td>
						<td> <%= @book.availableBooks %> </td>
					</tr>
				</table>

			</div>
			<% if @book.availableBooks > 0 %>
				<%= link_to "Lend Book", lend_path(@book), class: 'button' %>
			<% else %>
				<h2>No Books Available Right Now</h2>
			<% end %>
		</center>
	</div>


	<br><br><br><br><br><br><br><br><br>

	<div class="footer">
		Visit Soon
	</div>
</div>