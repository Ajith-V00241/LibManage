<div class="fullPage" >
	<div class="header" >
		<%= link_to image_tag('/assets/bookLogo.jpg'), '/books' , :class=>'logo' %>

		<center>
			<h1 > LIBRARY MANAGEMENT SYSTEM</h1>
			<p> A platform to search your favorite book </p>
		</center>
		<div class="tab">
			<div class="contents">
				Welcome, <%= current_user.name %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

				<%= link_to 'Requests', lendRequests_path %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

				<%= link_to 'Lended Books', lendedBooks_path %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;


				<%= link_to 'LogOut', destroy_user_session_path, method: :delete %>
				&nbsp;&nbsp;&nbsp;&nbsp;
			</div>

			<%= form_tag(searched_path, method: :get) do %>
				<%= text_field_tag(:search, params[:search] ,:placeholder=>"Search By Name") %>
				<%= submit_tag ("Search") %>
			<% end %>

		</div>

	</div>


	<div class="container" >
		<center>
			<div class="requestsTabs">
				<a class= "requestsTabAnchor" href='/lendRequests' >
					<div class="requestsTab">
						Lend Requests
					</div>
				</a>
				<a class= "requestsTabAnchor" href='/returnRequests' >
					<div class="requestsTabActive">
						Return Requests
					</div>
				</a>
			</div>

			<br><br>
			
			<div class= "requestsBox"> 
				<% if @returnRequests.empty? %>
					<br><br><br>
					<h1> No Requests for lending Books </h1>
				<% else %>
					<table>
							<tr>
								<th id="t1"> S.No. </th>
								<th id="t2"> Book </th>
								<th id="t3"> Available <br> Books </th>
								<th id="t4"> Status </th>
							</tr>
						<% i=1 %>
						<% @returnRequests.each do |request| %>
							<% if LendedBook.find(request.lended_book_id) %>
								<% book = @books.find(request.book_id) %>
								<tr>
									<td> <%= i %> <% i+=1 %> </td>
									<td> <%= book.title %> </td>
									<td> <%= book.availableBooks %>/<%= book.totalBooks %> </td>
									<td> <%= request.status %> </td>
								</tr>
							<% end %>
						<% end %>
					</table>
				<% end %>
			</div>
		</center>
	</div>



	<br><br><br><br><br><br><br><br><br>

	<div class="footer">
		Visit Soon
	</div>
</div>