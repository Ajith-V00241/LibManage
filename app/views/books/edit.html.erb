<div class="fullPage" >
	<div class="header" >
		<%= link_to image_tag('/assets/bookLogo.jpg'), librarians_path , :class=>'logo' %>

		<center>
			<h1 > LIBRARY MANAGEMENT SYSTEM</h1>
			<p> A platform to search your favorite book </p>
		</center>
		<div class="tab">
			<div class="contents">
				Welcome, <%= current_user.name %> <font color="black">(<%= current_user.role.upcase %>)</font>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;


				<%= link_to 'LogOut', destroy_user_session_path, method: :delete %>
				&nbsp;&nbsp;&nbsp;&nbsp;
			</div>

		</div>

	</div>

	<div class="librarianContainer" >
		<center>
			<div class="librarianBookEditBox">
				<% if !@book.errors.messages.empty? %>
					<ul style="color: red; font-size: 25px; align-self: center;" >
						<% @book.errors.messages.each do |label, messages| %>
							<% messages.each do |message| %>
								<li> <%= "#{label.to_s.capitalize} #{message}" %> </li>
							<% end %>
						<% end %>
					</ul>
				<% end %>
				<%= form_for @book do |f| %>
					<table class="librarianBookEditTable">
						<tr>
							<td> <%= f.label :title %> </td>
							<td> <%= f.text_field :title, presence: true %>
						</tr>
						<tr>
							<td> <%= f.label :author %> </td>
							<td> <%= f.text_field :author, presence: true  %> </td>
						</tr>
						<tr>
							<td> <%= f.label :publisher %> </td>
							<td> <%= f.text_field :publisher, presence: true  %> </td>
						</tr>
						<tr>
							<td> <%= f.label :language %> </td>
							<td> <%= f.text_field :language, presence: true  %> </td>
						</tr>
						<tr>
							<td> <%= f.label :description %> </td>
							<td> <%= f.text_area :description, presence: true  %> </td>
						</tr>
						<tr>
							<td> <%= f.label :total_books %> </td>
							<td> <%= f.text_field :totalBooks, presence: true  %> </td>
						</tr>
						<tr>
							<td> <%= f.label :available_books %> </td>
							<td> <%= f.text_field :availableBooks, presence: true  %> </td>
						</tr>
						<tr>
							<td> <%= f.label :image_path %> </td>
							<td> <%= f.text_field :image, presence: true  %> </td>
						</tr>
					</table>

					<%= f.submit "Save Changes", class: 'librarianBookEditButton' %>

				<% end %>
			</div>

		</center>
	</div>


	<br><br><br><br><br><br><br><br><br>

	<div class="footer">
		Visit Soon
	</div>
</div>
