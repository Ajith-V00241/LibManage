<div class="fullPage" >
	<div class="header" >
		<%= link_to image_tag('/assets/bookLogo.jpg'), '/books' , :class=>'logo' %>

		<center>
			<h1 > LIBRARY MANAGEMENT SYSTEM</h1>
			<p> A platform to search your favorite book </p>
		</center>
		<div class="tab">
			<div class="contents">
				Welcome,<%= link_to current_user.name, show_user_path(current_user) %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

				<%= link_to 'Requests', lend_requests_books_path %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

				<%= link_to 'Lended Books', lended_list_books_path %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

				<%= link_to 'LogOut', destroy_user_session_path, method: :delete %>
				&nbsp;&nbsp;&nbsp;&nbsp;
			</div>
		</div>
	</div>



	<div class="container" >
		<center>
			<div class="showUserDetails">
				<br><br>
				<h1> USER DETAILS </h1>
				<table class="bookDetails">
					<tr>
						<td class="TableTag"> <b> User Id </b></td>
						<td> : &nbsp;&nbsp;&nbsp;</td>
						<td> <%= @user.id %> </td>
					</tr>
					<tr>
						<td class="TableTag"> <b> Name </b></td>
						<td> : &nbsp;&nbsp;&nbsp;</td>
						<td> <%= @user.name %> </td>
					</tr>
					<tr>
						<td class="TableTag"> <b>Email</b> </td>
						<td> : &nbsp;&nbsp;&nbsp;</td>
						<td> <%= @user.email %> </td>
					</tr>
					<tr>
						<td class="TableTag"><b> Phone </b></td>
						<td> : &nbsp;&nbsp;&nbsp;</td>
						<td> <%= @user.phone %> </td>
					</tr>
					<tr>
						<td class="TableTag"> <b>Address</b> </td>
						<td> : &nbsp;&nbsp;&nbsp;</td>
						<td> <%= @user.address %> </td>
					</tr>
					<tr>
						<td class="TableTag"> <b>Date Of Membership </b></td>
						<td> : &nbsp;&nbsp;&nbsp;</td>
						<td> <%= @user.date_of_membership.strftime("%Y-%m-%d") %> </td>
					</tr>
					<tr>
						<td class="TableTag"> <b>Total Checkouts</b> </td>
						<td> : &nbsp;&nbsp;&nbsp;</td>
						<td> <%= @user.totalcheckout %> </td>
					</tr>
				</table>
			</div>
			<br>
			<%= link_to "Edit", edit_user_registration_path(@user), class: "button" %>
		</center>
	</div>




	<br><br><br><br><br><br><br><br><br>
	

	<div class="footer">
		Visit Soon
	</div>
</div>