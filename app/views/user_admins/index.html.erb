<div class="fullPage" >
	<div class="header" >
		<%= link_to image_tag('/assets/bookLogo.jpg'), librarians_path , :class=>'logo' %>

		<center>
			<h1 > LIBRARY MANAGEMENT SYSTEM</h1>
			<p> A platform to search your favorite book </p>
		</center>
		<div class="tab">
			<div class="contents">
				Welcome, <%= current_user.name %> <font color="black">(<%= current_user.role.humanize %>)</font>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;


				<%= link_to 'LogOut', destroy_user_session_path, method: :delete %>
				&nbsp;&nbsp;&nbsp;&nbsp;
			</div>

		</div>

	</div>


	<div class="librarianContainer" >
		<center>
			<h1> List Of All Users </h1><br>
			<h4>Note:</h4> Click on name to open details
			<div class= "allUsersBox"> 
				<% if @users.empty? %>
				<br><br><br>
					<h1> No Users </h1>
				<% else %>
				<table>
						<tr>
							<th id="t1"> S.No. </th>
							<th id="t2"> User Id </th>
							<th id="t3"> User Name</th>
						</tr> 
					<% count = ((params[:page] || 1).to_i - 1 ) * 10 %>
					<% @users.each_with_index do |user, index| %>
							<tr class="allUsersTableRow">
								<td> <%= count + index + 1%> </td>
								<td> <%= user.id %> </td>
								<td> <%= link_to user.name, user_admin_path(user) %> </td>
							
							</tr>
					<% end %>
				</table>
				<% end %>
				
			</div>
			<br>
			<%= will_paginate @users, class: "digg_pagination" %>
		</center>
	</div>




	<br><br><br><br><br><br><br><br><br>

</div>
